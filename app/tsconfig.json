{
  "include": ["./data/**/*", "./db/**/*", "./scripts/**/*", "./src/**/*"],
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "outDir": "../dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["ES2019"],
    "paths": {}
  }
}
